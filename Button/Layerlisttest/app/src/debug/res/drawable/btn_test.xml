<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<!-- 对于layer-list的简单使用-->
    <item >
        <shape android:shape="rectangle">
            <solid android:color="@android:color/holo_red_dark"></solid>
        </shape>
    </item>
    <item android:bottom="25dp" android:left="25dp" android:top="25dp" android:right="25dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black"></solid>
        </shape>
    </item>
    <item android:bottom="50dp" android:left="50dp" android:top="50dp" android:right="50dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDark"></solid>
        </shape>
    </item>

</layer-list>